[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[gpg]
	program = gpg
[pull]
	rebase = false
[core]
    pager = delta
[delta]
    plus-style = "syntax #012800"
    minus-style = "normal #340001"
    syntax-theme = gruvbox-dark
    side-by-side = true
[interactive]
    diffFilter = delta --color-only
[user]
	name = "{{ .name }}"
	email = "{{ .email }}"
